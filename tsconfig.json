{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@{{APP_NAME}}/commons": ["./commons/src"],
      "@{{APP_NAME}}/commons/*": ["./commons/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "api-service/**/*",
    "commons/**/*"
  ],
  "exclude": [
    "node_modules",
    "dashboard"
  ]
}